<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="6dp"/>
            <solid android:color="@color/white_opacity_disabled"/>
        </shape>
    </item>
    <item android:state_hovered="true">
        <shape>
            <corners android:radius="6dp"/>
            <solid android:color="@color/white_opacity_hovered"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="6dp"/>
            <solid android:color="@color/white_opacity_pressed"/>
        </shape>
    </item>
    <item android:state_activated="true">
        <shape>
            <corners android:radius="6dp"/>
            <solid android:color="@color/white_opacity_activated"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <corners android:radius="6dp"/>
            <solid android:color="@color/white_opacity_focused"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <corners android:radius="6dp"/>
            <solid android:color="@color/white_opacity_selected"/>
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="6dp"/>
            <solid android:color="@android:color/white"/>
        </shape>
    </item>
</selector>