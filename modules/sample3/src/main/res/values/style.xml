<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/title_text_padding</item>
    </style>

    <style name="Icon">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:layout_margin">@dimen/icon_margin</item>
        <item name="android:padding">@dimen/icon_padding</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:padding">@dimen/button_padding</item>
    </style>

    <style name="RadioGroup">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/radio_group_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/radio_group_margin_bottom</item>
    </style>
</resources>