<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="oval">
            <solid android:color="@color/caution_disabled"/>
        </shape>
    </item>
    <item android:state_hovered="true">
        <shape android:shape="oval">
            <solid android:color="@color/caution_hovered"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/caution_pressed"/>
        </shape>
    </item>
    <item android:state_activated="true">
        <shape android:shape="oval">
            <solid android:color="@color/caution_activated"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval">
            <solid android:color="@color/caution_focused"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="oval">
            <solid android:color="@color/caution_selected"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/caution"/>
        </shape>
    </item>
</selector>